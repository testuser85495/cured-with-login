<script>
    $(document).ready(function () {
        showEmployeeData();
        //
    })
    function showEmployeeData() {

        $.ajax({
            url: "/Home/studataList",
            type: "Get",
            dataType: "json",
            contentType: "application/json;charset=utf-8;",
            success: function (result, status, xhr) {
                var res = '';
                $.each(result, function (index, item) {
                    res += '<tr>';
                    //res += '<td>' + item.studentId + '<td>';
                    res += '<td>' + item.name + '<td>';
                    res += '<td>' + item.age + '<td>';
                    res += '<td>' + item.email + '<td>';
                    res += '<td>' + item.gender + '<td>';
                    res += '<td>' + item.address + '<td>';
                    res += '<td>' + item.language + '<td>';
                    res += '<td> <a href="#" class="btn btn-primary" onclick="Edit(' + item.studentId + ')"> Edit </a> || <a href="#" class="btn btn-danger" onclick="Delete(' + item.studentId + ')"> Delete </a></td>';
                    res += '</tr>';
                });
                $("#table_data").html(res);
            },

            error: function () {
                alert('data not get');
            }
        });
    };

    function Multiselect() {
        $('#Language').mobiscroll().select({
            inputElement: document.getElementById('my-input'),
            touchUi: false
        });
    }



    function AddStudent() {
        debugger;

        var objdata = {
            name: $('#Name').val(),
            age: $('#Age').val(),
            email: $('#Email').val(),
            gender: $('#Gender').val(),
            address: $('#Address').val(),
            language: $('#Language').val(),
        }
        $.ajax({
            url: "/Home/Addstu",
            type: "Post",
            data: objdata,
            contentType: "application/x-www-form-urlencoded;charset=utf-8;",
            dataType: "json",
            success: function () {

                alert('Data Save');
                Multiselect();
                showEmployeeData();
                cleartextbox();

                HideModalpopup();
            },
            error: function () {
                alert('No Data Found');

            }

        })
    }
